<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- EditText A -->
    <EditText
        android:id="@+id/edtA"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="12dp"
        android:hint="@string/hint_a"
        android:inputType="textPersonName"
        android:autofillHints="name"
        android:ems="10"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:backgroundTint="@color/underline_gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"
        app:layout_constraintHorizontal_bias="0.5" />

    <!-- EditText B -->
    <EditText
        android:id="@+id/edtB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="12dp"
        android:hint="@string/hint_b"
        android:inputType="textPersonName"
        android:autofillHints="name"
        android:ems="10"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:backgroundTint="@color/underline_gray"
        app:layout_constraintTop_toBottomOf="@id/edtA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"
        app:layout_constraintHorizontal_bias="0.502" />

    <!-- EditText KQ -->
    <EditText
        android:id="@+id/edtKQ"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="12dp"
        android:hint="@string/hint_kq"
        android:inputType="textPersonName"
        android:autofillHints="name"
        android:ems="10"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:backgroundTint="@color/underline_gray"
        app:layout_constraintTop_toBottomOf="@id/edtB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"
        app:layout_constraintHorizontal_bias="0.502" />

    <!-- Button -->
    <Button
        android:id="@+id/btnCong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_cong"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/edtKQ"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>
